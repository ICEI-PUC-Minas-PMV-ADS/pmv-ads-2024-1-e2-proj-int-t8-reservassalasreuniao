@model reserva_sala_reuniao.Models.Sala

@{
    ViewData["Title"] = "Details";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 mb-5 bg-white rounded">
                <div class="card-body">
                    <h1 class="text-center">Details</h1>
                    <h4 class="text-center">Sala</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Localizacao)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Localizacao.Nome)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.LotacaoMaxima)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.LotacaoMaxima)
                        </dd>
                    </dl>
                    <div class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Index" class="btn btn-link">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
