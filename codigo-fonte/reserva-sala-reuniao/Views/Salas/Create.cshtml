@model reserva_sala_reuniao.Models.Sala

@{
    ViewData["Title"] = "Create";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 mb-5 bg-white rounded">
                <div class="card-body">
                    <h1 class="text-center">Adicionar nova sala</h1>                    
                    <hr />
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="LocalizacaoId" class="control-label"></label>
                            <select asp-for="LocalizacaoId" class="form-control" asp-items="ViewBag.LocalizacaoId"></select>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LotacaoMaxima" class="control-label"></label>
                            <input asp-for="LotacaoMaxima" class="form-control" />
                            <span asp-validation-for="LotacaoMaxima" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Adicionar" class="btn btn-primary" />
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="btn btn-link">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
