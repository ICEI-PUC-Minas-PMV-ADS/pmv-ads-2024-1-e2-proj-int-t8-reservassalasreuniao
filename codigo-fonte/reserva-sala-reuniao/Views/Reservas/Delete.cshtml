@model reserva_sala_reuniao.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 mb-5 bg-white rounded">
                <div class="card-body">                    
                    <h3 class="text-center">Tem certeza que deseja remover essa reserva?</h3>                    
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 text-sm-end">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-8">
                            <div class="d-flex align-items-center justify-content-center">@Html.DisplayFor(model => model.Descricao)</div>
                        </dd>
                        <dt class="col-sm-4 text-sm-end">
                            @Html.DisplayNameFor(model => model.Data)
                        </dt>
                        <dd class="col-sm-8">
                            <div class="d-flex align-items-center justify-content-center">@Html.DisplayFor(model => model.Data)</div>
                        </dd>
                        <dt class="col-sm-4 text-sm-end">
                            @Html.DisplayNameFor(model => model.HorasReservadas)
                        </dt>
                        <dd class="col-sm-8">
                            <div class="d-flex align-items-center justify-content-center">@Html.DisplayFor(model => model.HorasReservadas)</div>
                        </dd>
                        <dt class="col-sm-4 text-sm-end">
                            Sala
                        </dt>
                        <dd class="col-sm-8">
                            <div class="d-flex align-items-center justify-content-center">@Html.DisplayFor(model => model.Sala.Localizacao.Nome)</div>
                        </dd>
                        <dt class="col-sm-4 text-sm-end">
                            @Html.DisplayNameFor(model => model.Usuario)
                        </dt>
                        <dd class="col-sm-8">
                            <div class="d-flex align-items-center justify-content-center">@Html.DisplayFor(model => model.Usuario.Email)</div>
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <input type="submit" value="Remover" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
