@model reserva_sala_reuniao.Models.Cargo

@{
    ViewData["Title"] = "Details";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 mb-5 bg-white rounded">
                <div class="card-body">
                    <h1 class="text-center">Exibir</h1>
                    <h4 class="text-center">Cargo</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                    </dl>
                    <div class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Index" class="btn btn-link">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

