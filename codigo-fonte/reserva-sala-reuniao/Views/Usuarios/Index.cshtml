@model IEnumerable<reserva_sala_reuniao.Models.ViewModel.UsuarioViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg mb-4">
                <div class="card-body">
                    <h1 class="text-center mb-4">Usuários</h1>

                    <div class="text-end mb-3">
                        <a asp-action="Create" class="btn btn-primary">Adicionar novo usuário</a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Setor</th>
                                    <th>Cargo</th>
                                    <th>Perfil</th>
                                    <th class="text-end">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => usuario.Nome)</td>
                                        <td>@Html.DisplayFor(modelItem => usuario.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => usuario.NomeSetor)</td>
                                        <td>@Html.DisplayFor(modelItem => usuario.NomeCargo)</td>
                                        <td>@Html.DisplayFor(modelItem => usuario.Perfil)</td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Create" asp-route-id="@usuario.Id" class="btn btn-sm btn-secondary">Editar</a>
                                                <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-sm btn-secondary">Exibir</a>
                                                <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-sm btn-secondary">Apagar</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>