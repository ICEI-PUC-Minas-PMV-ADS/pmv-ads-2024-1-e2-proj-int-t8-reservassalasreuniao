@model reserva_sala_reuniao.Models.Usuario
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-lg-5 mb-4">
            <div class="card shadow-lg p-3 bg-white rounded">
                <div class="card-body">
                    <form asp-controller="Usuarios" asp-action="Login" method="post">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" name="Email" id="Email" value="@Model?.Email" placeholder="name@example.com" required>
                            <label for="floatingInput">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" name="Senha" id="Senha" placeholder="Password" required>
                            <label for="floatingPassword">Senha</label>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger text-center mt-2">
                                <span>@ViewBag.Message</span>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-7 text-center">
            <img src="~/Images/Logo_mm.png" alt="Logo" class="img-fluid mt-4" style="max-width: 100%; max-height: 400px;">
        </div>
    </div>
</div>
